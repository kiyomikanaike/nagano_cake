<div class="container">
 <div class="row">
  <div class="mx-auto">

      <h4 class="mt-5 mb-4"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h4>
      <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <%= form_with model: @customer,url: admin_customer_path do |f| %>
      <tr>
       <th><label for="inputName">氏名</label></th>
       <td><%= f.text_field :last_name, autofocus: true %></td>
       <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th><label for="inputName">フリガナ</label></th>
        <td><%= f.text_field :last_name_kana %></td>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th><label for="inputCode">郵便番号</label></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><label for="inputAddress">住所</label></th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><label for="inputCode">電話番号</label></th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><label for="inputEmail">メールアドレス</label></th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th><label for="inputStatus">会員ステータス</label></th>
        <td>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted,"有効" %>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted,"退会" %></td>
      </tr>
      </table>
       <span><%= f.submit "変更を保存",class: 'btn btn-success' %></span>
       <% end %>
  </div>
 </div>
</div>