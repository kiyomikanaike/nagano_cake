<div class="col-5 ml-3">
  <h4><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h4>
  <table>
  <tr>
    <th>会員ID</th>
    <td><%= @customer.id %></td>
  </tr>
  <%= form_with model: @customer,url: customers_information_path do |f| %>
  <tr>
   <th><label for="inputName">氏名</label></th>
   <td><%= f.text_field :last_name, autofocus: true %> <%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th><label for="inputName">フリガナ</label></th>
    <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th><label for="inputCode">郵便番号</label></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th><label for="inputAddress">住所</label></th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th><label for="inputCode">電話番号</label></th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th><label for="inputEmail">メールアドレス</label></th>
    <td><%= f.text_field :email %></td>
  </tr>
  </table>
   <span><%= f.submit "変更を保存",class: 'btn btn-success' %></span>
   <% end %>
</div>