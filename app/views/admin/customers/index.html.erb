<div class="container">
 <div class="row">
  <div class="mx-auto">

  <h4 class="mt-5 mb-4">会員一覧</h4>

    <table class="w-100 table">
      <tr>
       <th>会員ID</th>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
      <tr>
       <td><%= customer.id %></td>
       <td><%= link_to customer.last_name+customer.first_name,admin_customer_path(customer.id),class: 'text-dark' %></td>
       <td><%= customer.email %></td>
           <% if customer.is_deleted == true %>
           <td class="text-black-50">退会</td>
           <% else %>
           <td class="text-success">有効</td>
           <% end %>
      </tr>
      <% end %>
    </table>
    <%= paginate @customers %>

  </div>
 </div>
</div>