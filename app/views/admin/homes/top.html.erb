<div class="container">
  <h2>注文履歴一覧</h2>

    <table class="w-100 table">
      <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
      </tr>
      <% @orders.each do |order| %>
      <tr>
       <td><%= order.created_at %></td>
       <td><%= order.customer.last_name %>
           <%= order.customer.first_name %>
       </td>
       <td><%= order.order_items.sum(:amount) %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @orders %>
</div>
