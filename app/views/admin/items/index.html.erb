<div class="container">
  <h2>商品一覧</h2>

  <div class="text-right"><%= link_to "+", new_admin_item_path,class: 'text-dark' %></div>
    <table class="w-100 table">
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
      </tr>
      <% @item.each do |item| %>
      <tr>
       <td><%= item.id %></td>
       <td><%= link_to item.name,admin_item_path(item.id),class: 'text-dark' %></td>
       <td><%= item.price %></td>
       <td><%= item.genre.genre_name %></td>
       <td><% if item.sales_status == true %>
           <td class="text-success">販売中</td>
           <% else %>
           <td class="text-black-50">販売停止中</td>
           <% end %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @item %>
</div>
