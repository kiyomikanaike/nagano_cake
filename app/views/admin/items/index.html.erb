<div class="container">
  <h2>商品一覧</h2>

  <div class="text-right"><%= link_to "+", new_admin_item_path,class: 'text-dark' %></div>
    <table class="w-100 table">
      <tr>
       <th>商品ID</th>
       <th>商品名</th>
       <th>税抜価格</th>
      </tr>
      <% @item.each do |item| %>
      <tr>
       <td><%= item.id %></td>
       <td><%= link_to item.name,admin_item_path(item.id),class: 'text-dark' %></td>
       <td><%= item.price %></td>
      </tr>
      <% end %>
    </table>
    <%= paginate @item %>
</div>
