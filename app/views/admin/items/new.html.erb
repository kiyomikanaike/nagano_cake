<div class="container">
<h4>商品新規登録</h4>
  <%= form_with model: @item,url:admin_items_path do |f| %>
  <table>
    <tr>
      <th>商品画像</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name),include_blank: "選択してください" %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%= f.number_field :price %>円</td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td>
        <%= f.radio_button :sales_status, "sale" %>
        <%= f.label :sales_status_sale, "販売中" %>

        <%= f.radio_button :sales_status, "stop_sale" %>
        <%= f.label :sales_status_stop_sale, "販売停止中" %>
      </td>
    </tr>
    </table>
    <%= f.submit '新規登録',class: 'btn btn-success' %>
  <% end %>

</div>