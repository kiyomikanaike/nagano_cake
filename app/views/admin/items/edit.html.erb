<div class="container">
 <div class="col-md-8 offset-md-1">

   <h4>商品編集</h4>
     <%= form_with model: @item,url:admin_item_path,method: :patch do |f| %>
     <table>
     <tr>
       <th><label for="inputImage">商品画像</label>
       <%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
       </th>
     </tr>
     <tr>
         <th><label for="inputName">商品名</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名"%>
         </th>
     </tr>
     <tr>
         <th><label for="inputIntroduction">商品説明</label>
         <%= f.text_area :introduction, placeholder: "商品説明" %>
         </th>
     </tr>
     <tr>
         <th><label for="inputPrice">税抜価格</label>
         <%= f.number_field :price, placeholder: "税抜価格" %>円
         </th>
     </tr>
     <tr>
         <th><%= f.submit "変更を保存",class: 'btn btn-success' %></th>
         <% end %>
     </tr>
     </table>
 </div>
</div>
