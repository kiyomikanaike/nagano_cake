<div class="container">
 <div class="col-md-8 offset-md-1">

 <h4>商品詳細</h4>
  <table>
    <% if @item.image.attached? %>
     <%= image_tag @item.image,size:"200x200" %>
    <% else %>
     <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <th>税込価格<br>(税抜価格)</th>
    <td><%= @item.tax_included_price %>(<%= @item.price %>)円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td><% if @item.sales_status == true %>
        <td class="text-success">販売中</td>
        <% else %>
        <td class="text-black-50">販売停止中</td>
        <% end %></td>
  </tr>
  </table>
  <span><%= link_to "編集する", edit_admin_item_path,class: 'btn btn-success' %></span>
 </div>
</div>
