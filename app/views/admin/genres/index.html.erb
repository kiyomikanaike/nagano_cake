<div class="container">
  <h4>ジャンル一覧・追加</h4>
  <%= form_with model: @new_genre,url:admin_genres_path do |f| %>
  <table>
    <tr>
      <th>ジャンル名</th>
      <td><%= f.text_field :genre_name %></td>
      <td><%= f.submit '新規登録',class: 'btn btn-success' %></td>
    </tr>
  </table>
  <% end %>


  <table class="table">
    <tr>
       <th>ジャンル</th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
       <td><%= genre.genre_name %>
           <%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %>
       </td>
    </tr>
    <% end %>
  </table>
</div>