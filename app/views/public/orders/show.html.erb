<div class="container">
 <div class="col-md-8 offset-md-1">

   <h4>注文履歴詳細</h4>
   <h5 class="font-weight-bold">注文情報</h5>
   <table>
   <tr>
     <th>注文日</th>
     <td><%= @order.created_at %></td>
   </tr>
   <tr>
     <th>配送先</th>
     <td><%= @order.delivery_postal_code  %>
     <p><%= @order.delivery_address  %></p>
     <p><%= @order.delivery_name  %></p>
     </td>
   </tr>
   <tr>
     <th>支払方法</th>
     <td><%= @order.payment_method_i18n  %></td>
   </tr>
   </table>


   <h5 class="font-weight-bold">請求情報</h5>
   <table>
    <tr>
     <th>商品合計</th>
     <td><%= @order.billing_amount - 800 %></td>
    </tr>
    <tr>
     <th>配送料</th>
     <th>800</th>
    </tr>
    <tr>
     <th>ご請求額</th>
     <td><%= @order.billing_amount %></td>
    </tr>
   </table>

   <h5 class="font-weight-bold">注文内容</h5>
   <table class="w-100 table">
      <tr>
       <th>商品</th>
       <th>単価（税込）</th>
       <th>個数</th>
       <th>小計</th>
      </tr>
      <% @order_items.each do |order_item| %>
      <tr>
       <td><%= order_item.item.name %></td>
       <td><%= order_item.purchase_price %></td>
       <td><%= order_item.amount %></td>
       <td><%= order_item.subtotal_order_item %></td>
      </tr>
      <% end %>
    </table>

 </div>
</div>