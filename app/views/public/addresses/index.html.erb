<div class="col-5 ml-3">
  <h4>配送先登録/一覧</h4>
  <%= form_with model: Address.new, url: addresses_path do |f| %>
  <table>
  <tr>
    <th>郵便番号（ハイフンなし）</th>
    <td><%= f.text_field:address_postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_area :address_address %></td>
  </tr>
  <tr>
    <th>宛名</th>
    <td><%= f.text_field :address_name %></td>
  </tr>
  </table>
  <%= f.submit "新規登録",class: 'btn btn-success' %>
  <% end %>

  <table>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @address.each do |address| %>
    <tr>
      <td><%= address.address_postal_code %></td>
      <td><%= address.address_address %></td>
      <td><%= address.address_name %></td>
      <td><%= link_to "編集する",edit_address_path(address), class: 'btn btn-success' %>
          <%= link_to "削除する",address_path(address),method: :delete,class: 'btn btn-danger' %>
      </td>
    </tr>
  </table>
  <% end %>
</div>