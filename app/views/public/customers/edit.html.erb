<h2>会員情報編集</h2>
<%= form_with model: @customer,url: customers_information_path do |f| %>

  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus: true %> <%= f.text_field :first_name %>

  <br><label for="inputName">フリガナ</label>
  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>

  <br><label for="inputCode">郵便番号</label>
  <%= f.text_field :postal_code %>

  <br><label for="inputAddress">住所</label>
  <%= f.text_field :address %>

  <br><label for="inputCode">電話番号</label>
  <%= f.text_field :postal_code %>

  <br><label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email %>

  <br><%= f.submit "編集内容を保存" %> <%= link_to "退会する", customers_confirm_withdraw_path %>
<% end %>