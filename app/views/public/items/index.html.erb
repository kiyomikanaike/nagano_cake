<div class="container">
 <div class="row">
  <div class="mx-auto">

   <h4 class="font-weight-bold">商品一覧</h4>
   <% @items.each do |item| %>

   <%= image_tag item.get_image,size:"200x200"%>
   <%= link_to item.name,item_path(item.id),class: 'text-dark' %>
   ¥<%= item.price %>

   <% end %>
   <%= paginate @items %>

   </div>
 </div>
</div>
